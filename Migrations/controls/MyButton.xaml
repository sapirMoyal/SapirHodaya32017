<Button x:Class="ex2.controls.MyButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ex2.controls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="200" FontFamily="Comic Sans MS" FontSize="26.667" Foreground="#FFC71A3A" BorderBrush="{x:Null}" FontWeight="Bold">
    <Button.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Transparent" Offset="0.2"/>
            <GradientStop  Color="Pink" Offset="0.85"/>
            <GradientStop Color="Red" Offset="1"/>
        </LinearGradientBrush>
    </Button.Background>
    <Button.OpacityMask>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFE6328C" Offset="0"/>
            <GradientStop Color="#FFF52F92" Offset="1"/>
        </LinearGradientBrush>
    </Button.OpacityMask>
</Button>
