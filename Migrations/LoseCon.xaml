<Window x:Class="ex2.LoseCon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ex2"
        mc:Ignorable="d"
        Title="LoseCon" Height="400" Width="600">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="stam.jpg"/>
        </Grid.Background>
        <TextBlock x:Name="text" HorizontalAlignment="Left" Margin="10,20,0,0" TextWrapping="Wrap" Text="Sorry, it's not working between us" VerticalAlignment="Top" Foreground="#FF12B97C" FontFamily="Rockwell Extra Bold" FontSize="66.667" FontStretch="SemiExpanded" Height="295" Width="572">
            <TextBlock.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF19D2DA" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.OpacityMask>
        </TextBlock>
    </Grid>
</Window>
