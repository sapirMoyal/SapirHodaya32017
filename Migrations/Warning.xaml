<Window x:Class="ex2.Warning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ex2"
        mc:Ignorable="d"
        Title="Warning" Height="500" Width="500">
    <Grid Name="GridWarning" >
        <Grid.Background>
            <ImageBrush ImageSource="waiting.jpg"/>
        </Grid.Background>
        <Label x:Name="label" TextBlock.Foreground="White" FontFamily="Cooper Black"  TextBlock.FontSize="20" VerticalAlignment='Top' HorizontalAlignment="Center" Margin="20" RenderTransformOrigin="0.551,1.784" FontSize="70"/>
        <Button x:Name="button" Content="Give Up" HorizontalAlignment="Left" Margin="140,290,0,0" VerticalAlignment="Top" Width="190" Height="45" Foreground="#FF5C6061" FontFamily="Forte" FontSize="26.667" Click="button_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFCAECF0" Offset="0"/>
                    <GradientStop Color="#FF2DC1D1" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>
